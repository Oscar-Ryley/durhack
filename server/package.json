{
  "name": "durhack-server",
  "private": true,
  "scripts": {
    "start": "node dist/index.cjs",
    "prebuild": "pnpm run type-check",
    "build": "tsup",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "dev": "tsx src/main.ts",
    "dev:watch": "tsx watch src/main.ts",
    "test": "vitest run --silent",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "@tinyhttp/app": "^2.3.1",
    "@tinyhttp/cookie-signature": "^2.1.1",
    "@tinyhttp/logger": "^2.0.0",
    "corstisol": "^1.0.0",
    "http-errors": "^2.0.0",
    "milliparsec": "^2.3.0",
    "next-session": "^4.0.5",
    "openid-client": "^5.6.5",
    "zod": "^3.23.8",
    "zod-config": "^0.0.5"
  },
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/http-errors": "^2.0.4",
    "@types/node": "^20.14.6",
    "glob": "^11.0.0",
    "prisma": "^5.18.0",
    "tsup": "^8.2.3",
    "tsx": "^4.15.6",
    "typescript": "^5.4.5",
    "vitest": "^2.0.5"
  }
}
