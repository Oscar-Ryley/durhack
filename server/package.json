{
  "name": "durhack-server",
  "private": true,
  "scripts": {
    "start": "node dist/index.cjs",
    "prebuild": "pnpm run type-check",
    "build": "tsup",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "dev": "tsx src/main.ts",
    "dev:watch": "tsx watch src/main.ts",
    "test": "vitest run --silent",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@otterhttp/app": "^3.4.4",
    "@otterhttp/cookie-signature": "^3.0.0",
    "@otterhttp/errors": "^0.2.1",
    "@otterhttp/parsec": "^0.1.2",
    "@otterhttp/session": "^0.3.1",
    "@prisma/client": "^5.19.1",
    "corstisol": "^1.0.0",
    "openid-client": "^5.6.5",
    "zod": "^3.23.8",
    "zod-config": "^0.0.5"
  },
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/node": "^22.5.3",
    "glob": "^11.0.0",
    "prisma": "^5.19.1",
    "tsup": "^8.2.3",
    "tsx": "^4.15.6",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}
